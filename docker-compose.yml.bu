version: '2'
services:
  wordpress:
    image: wordpress:latest
    container_name: wordpress
    depends_on:
      - db
    environment:
      VIRTUAL_HOST: "wordpress.local"
      WORDPRESS_DB_HOST: "db:3306"
    env_file: .env

  db:
    image: mysql:latest
    env_file: .env
    volumes:
      - db-data:/var/lib/mysql

volumes:
  db-data:
    driver: local

networks:
  default:
    external:
      name: shared

